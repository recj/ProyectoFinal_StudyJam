<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ea000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.rodrigo.aboliviapresidentes.InformacionFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.40"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/logofinal" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/cardview_light_background"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descripcion_detalle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.47"
        android:padding="13dp"
        android:gravity="center"
        android:text="@string/Descripcion_App"
        android:textColor="@color/cardview_light_background"
        android:textSize="15sp"
        android:autoLink="email"
        android:textStyle="italic" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="#fff"
        android:autoLink="web"
        android:text="@string/aboutAuthor"/>

</LinearLayout>

